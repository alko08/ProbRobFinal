<launch>
	<param name="robot description" command=$(find xacro)/xacro '$(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro'" />
	<!-- Run GMapping -->
	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
		<param name="scan" value="/scan" />
		<param name="odom_frame" value ="/odom" />
		<param name ="base_frame" value="/base_link"/>
		<param name = "map_frame" value="/map" />
		<param name="use_sim_time" value="true"/>
	</node>

	<!-- Launch RViz for visualization -->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find Vanessa_Alex_TurbleBot)/rviz/slam_config.rviz" required="true"/>
</launch>
